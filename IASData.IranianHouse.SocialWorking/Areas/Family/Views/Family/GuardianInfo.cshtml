@model DAL.FamilyViewModel

@{

}

<h2></h2>

@using (Ajax.BeginForm(
    "EditGuardianInfo",
    "Family",
    new { id = Model.FamilyId },
    new AjaxOptions
    {
        UpdateTargetId = "editGuardianInfoResult",
        InsertionMode = InsertionMode.Replace,
        LoadingElementId = "modalProgress",
        OnComplete = "",

    },
     new { enctype = "multipart/form-data" })
    )
{
    @Html.AntiForgeryToken()

    <div class="row form-group">
        <h4></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.FamilyId)

        <div class="input-group  col-md-12 col-sm-12 mb-3">
            <div class="input-group-append">
                <span class="input-group-text" id="basic-addon2"> قیم</span>
            </div>
            @Html.DropDownList("GuardianRelationTypeId", null, htmlAttributes: new { @class = "form-control" })
            @Html.EditorFor(model => model.GuardianName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.EditorFor(model => model.GuardianRelationTypeDesc, new { htmlAttributes = new { @class = "form-control", @placeholder = "نام قیم" } })
        </div>
        <div class="input-group  col-md-6 col-sm-12 mb-3">
            <div class="input-group-append">
                <span class="input-group-text" id="basic-addon2"> تلفن</span>
            </div>
            @Html.EditorFor(model => model.GuardianPhone, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="input-group  col-md-6 col-sm-12 mb-3">
            <div class="input-group-append">
                <span class="input-group-text" id="basic-addon2"> تلفن همراه</span>
            </div>
            @Html.EditorFor(model => model.GuardianCellPhone, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="input-group  col-md-12 col-sm-12 mb-3">
            <div class="input-group-append">
                <span class="input-group-text" id="basic-addon2"> نشانی</span>
            </div>
            @Html.EditorFor(model => model.GuardianAddress, new { htmlAttributes = new { @class = "form-control" } })
        </div>




        <div class=" text-left">
            <div>

                <a class="btn btn-warning" href="#" data-dismiss="modal" aria-label="Close">
                    <span class="fa fa-undo ml-3"></span>بازگشت
                </a>


                <button class="btn btn-success" type="submit">
                    <span class="fa fa-edit ml-3"></span>ثبت
                </button>

            </div>
        </div>

    </div> <div class="" id="editGuardianInfoResult">

    </div>
}

