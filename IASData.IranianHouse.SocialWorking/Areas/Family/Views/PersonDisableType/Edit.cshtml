@model List<DAL.PersonDisableType>




@foreach (var item in Model)
{

    using (Ajax.BeginForm(
        "EditPersonDisableType",
        "Family",
        new AjaxOptions
        {
            UpdateTargetId = "personMostInfo",
            InsertionMode = InsertionMode.Replace,
            LoadingElementId = "modalProgress",
            OnComplete = "",

        },
         new { enctype = "multipart/form-data" })
        )
    {
        @Html.AntiForgeryToken()
        <input type="hidden" name="PersonDisableTypeId" value="@item.PersonDisableTypeId" />


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row" >
            <div class="input-group  col-md-8 col-sm-12 mb-3">
                <div class="input-group-append">
                    <span class="input-group-text">توضیحات</span>
                </div>
                @Html.TextBox("PersonDisableTypeDesc", item.PersonDisableTypeDesc, new { @class = "form-control" })
            </div>
            <div class="btn btn-group-sm col-md-2 col-sm-12 mb-3">
                @Ajax.ActionLink(" حذف", "RemovePersonDisableType", new { id = item.PersonDisableTypeId }, new AjaxOptions
                {
                    Confirm = "آیا از حذف اطمینان دارید؟",
                    UpdateTargetId = "personMostInfo",
                    InsertionMode = InsertionMode.Replace,
                    LoadingElementId = "modalProgress",
                    OnBegin = "",

                }, new { @class = "btn btn-danger btn-sm fa fa-remove" })

                <button class="btn btn-warning btn-sm" type="submit">
                    <span class="fa fa-edit pl-2"></span>اصلاح
                </button>

            </div>
        </div>

    }
}
