<div>
    کاربر
    <input type="text" class="form-control" ng-model="filter.UserName" />

    <br />
    <a class="btn btn-success btn-xs" ng-click="add()">افزودن</a>
</div>
<table class="table table-bordered">

    <tr>
        <th>ردیف</th>
        <th>نام</th>
        <th>نام خانوادگی</th>
        <th>نام کاربری</th>
        <th>فعال</th>
        <th>عملیات</th>
    </tr>
    <tr ng-repeat="u in users|filter:filter">
        <td>{{$index+1}}</td>
        <td>{{u.UserFirstName}}</td>
        <td>{{u.UserLastName}}</td>
        <td>{{u.UserName}}</td>
        <td><input type="checkbox" ng-checked="u.UserIsActive" disabled="disabled"/></td>
        <td>
            <a class="btn btn-info btn-xs" ng-click="detail(u.UserId)">جزئیات</a>
            <a class="btn btn-warning btn-xs" ng-click="edit(u.UserId)">ویرایش</a>
            <a class="btn btn-danger btn-xs" ng-click="delete(u.UserId)">حذف</a>
        </td>
    </tr>
</table>
