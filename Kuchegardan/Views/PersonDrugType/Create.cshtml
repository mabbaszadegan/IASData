@model List<DAL.PersonDrugType>




@using (Ajax.BeginForm(
    "CreatePersonDrugType",
    "Family",
    new AjaxOptions
    {
        UpdateTargetId = "personMostInfo",
        InsertionMode = InsertionMode.Replace,
        LoadingElementId = "modalProgress",
        OnComplete = "",

    },
     new { enctype = "multipart/form-data" })
    )
{
    @Html.AntiForgeryToken()


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <input type="hidden" name="PersonId" value="@ViewBag.PersonId" />

    <fieldset class="border border-primary pr-3">
        <legend class="col-form-label col-sm-2 ml-1" style="width:100px;">ایجاد</legend>
        <div class="row">
            <div class="input-group  col-md-3 col-sm-12 mb-3">
                <div class="input-group-append">
                    <span class="input-group-text">نوع مواد مصرفی</span>
                </div>
                @Html.DropDownList("DrugTypeId", null, new { @class = "form-control" })
            </div>
            <div class="input-group  col-md-3 col-sm-12 mb-3">
                <div class="input-group-append">
                    <span class="input-group-text">سال شروع مصرف</span>
                </div>
                @Html.TextBox("DrugStartYear", null, new { @class = "form-control" })
            </div>
            <div class="input-group  col-md-9 col-sm-12 mb-3">
                <div class="input-group-append">
                    <span class="input-group-text">علت شروع مصرف</span>
                </div>
                @Html.TextBox("DrugStartCause", null, new { @class = "form-control" })
            </div>
            <div class="input-group  col-md-12 col-sm-12 mb-3">
                <div class="input-group-append">
                    <span class="input-group-text">توضیحات</span>
                </div>
                @Html.TextBox("DrugDesc", null, new { @class = "form-control" })
            </div>
            <div class="input-group  col-md-3 col-sm-12 mb-3">
                <div class="input-group-append">
                    <span class="input-group-text">سال پایان مصرف</span>
                </div>
                @Html.TextBox("DrugStopYear", null, new { @class = "form-control" })
            </div>
            <div class="input-group  col-md-9 col-sm-12 mb-3">
                <div class="input-group-append">
                    <span class="input-group-text">علت پایان مصرف</span>
                </div>
                @Html.TextBox("DrugStopCause", null, new { @class = "form-control" })
            </div>
            <div >

                <button class="btn btn-success btn-sm" type="submit">
                    <span class="fa fa-edit ml-3"></span>ثبت
                </button>

            </div>
        </div>
    </fieldset>

}

