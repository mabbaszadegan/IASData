@{
    var abuseTypes = (List<DAL.DisableType>)ViewBag.DisableTypes;
    var personId = ViewBag.PersonId;
}

<div class="row">
    @foreach (var item in abuseTypes)
    {
        <div class="card mb-3 ml-3">
            <div class="card-header">@item.DisableTypeName</div>
            <div class=" card-body">
                <fieldset class="border border-warning pr-3">
                    <legend class="col-form-label col-sm-5 ml-1" style="width:500px;">مشاهده و اصلاح سوابق</legend>
                    @Html.Action("Edit", "PersonDisableType", new { abuseTypeId = item.DisableTypeId, personId = personId })
                </fieldset>
                @Html.Action("Create", "PersonDisableType", new { abuseTypeId = item.DisableTypeId, personId = personId })
            </div>
        </div>
    }
    @foreach (var item in abuseTypes)
    {
        <div class=" col-md-12" id="PersonDisableType-@item.DisableTypeId">

        </div>
    }
</div>
