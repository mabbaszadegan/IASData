@model List<DAL.PersonChildAbuseType>




@using (Ajax.BeginForm(
    "CreatePersonChildAbuseType",
    "Family",
    new AjaxOptions
    {
        UpdateTargetId = "personMostInfo",
        InsertionMode = InsertionMode.Replace,
        LoadingElementId = "modalProgress",
        OnComplete = "",

    },
     new { enctype = "multipart/form-data" })
    )
{
    @Html.AntiForgeryToken()


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <input type="hidden" name="PersonId" value="@ViewBag.PersonId" />
    <input type="hidden" name="ChildAbuseTypeId" value="@ViewBag.AbuseTypeId" />

    <fieldset class="border border-primary pr-3">
        <legend class="col-form-label col-sm-2 ml-1" style="width:100px;">ایجاد</legend>
        <div class="row">
            <div class="input-group  col-md-6 col-sm-12 mb-3">
                <div class="input-group-append">
                    <span class="input-group-text">آزاردهنده</span>
                </div>
                @Html.DropDownList("RelationTypeId", null, new { @class = "form-control" })
                @Html.TextBox("AbuserName", null, new { @class = "form-control" })
            </div>
            <div class="input-group  col-md-4 col-sm-12 mb-3">
                <div class="input-group-append">
                    <span class="input-group-text">توضیحات</span>
                </div>
                @Html.TextBox("PersonChildAbuseTypeDesc", null, new { @class = "form-control" })
            </div>
            <div >

                <button class="btn btn-success btn-sm" type="submit">
                    <span class="fa fa-edit ml-3"></span>ثبت
                </button>

            </div>
        </div>
    </fieldset>

}

