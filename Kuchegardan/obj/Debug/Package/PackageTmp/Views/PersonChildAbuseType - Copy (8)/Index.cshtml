@{
    var abuseTypes = (List<DAL.ChildAbuseType>)ViewBag.ChildAbuseTypes;
    var personId = ViewBag.PersonId;
}

<div class="row">
    @foreach (var item in abuseTypes)
    {
        <div class="card">
            <div class="card-header">@item.ChildAbuseTypeName</div>
            <div class=" card-body">
                <fieldset class="border border-warning pr-3">
                    <legend class="col-form-label col-sm-3 ml-1" style="width:300px;">مشاهده و اصلاح سوابق</legend>
                    @Html.Action("Edit", "PersonChildAbuseType", new { abuseTypeId = item.ChildAbuseTypeId, personId = personId })
                </fieldset>
                @Html.Action("Create", "PersonChildAbuseType", new { abuseTypeId = item.ChildAbuseTypeId, personId = personId })
            </div>
        </div>
    }
    @foreach (var item in abuseTypes)
    {
        <div class=" col-md-12" id="PersonChildAbuseType-@item.ChildAbuseTypeId">

        </div>
    }
</div>
